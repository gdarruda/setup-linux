general {
    output_format = "i3bar"
    separator = " | "
    color_good = "#FFFFFF"
}

order += "cpu_usage"
order += "memory"
order += "tztime local"

cpu_usage {
	format= "cpu (usage): %usage"
}


memory {
        format = "memory: %free %available (%used) / %total"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
