general {
    output_format = "i3bar"
    separator = " | "
    color_good = "#FFFFFF"
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "wireless wlo1"
order += "tztime local"

cpu_usage {
	format= "cpu (usage): %usage"
}

cpu_temperature 0 {
	path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
	format = "cpu (temp): %degrees Â°C"
}

memory {
        format = "memory: %free %available (%used) / %total"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

wireless wlo1 {
        format_up = "wireless:(%quality at %essid, %bitrate) %ip"
        format_down = "wireless: down"
}
